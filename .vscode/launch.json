    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: JSON",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": [
                "-s", "students.json",
                "-r", "rooms.json",
                "-o", "result.json",
                "-f", "json"
            ],
        },
        {
            "name": "Python Debugger: XML",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": [
                "-s", "students.json",
                "-r", "rooms.json",
                "-o", "result.xml",
                "-f", "xml"
            ],
        }
    ]
}